<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text1111111101"
        android:background="#ff00ff"
        />

    <TextView
        android:id="@+id/text02"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="text02"
        android:layout_below="@id/text01"
        android:background="#ffff00"
        android:layout_alignRight="@id/text01"
        />

    <TextView
        android:id="@+id/text03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text03"
        android:layout_alignBottom="@id/text02"
        android:background="#0000ff"
        />

    <TextView
        android:id="@+id/text04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/text02"
        android:layout_toRightOf="@id/text02"
        android:text="text04"
        android:textSize="26sp"
        android:background="#00ff00"
        />

</RelativeLayout>