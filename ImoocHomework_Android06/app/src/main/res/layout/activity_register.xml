<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_dark">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="用户注册"
            android:textSize="22sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/register_username_iv"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/loginuser"
                />

            <EditText
                android:id="@+id/register_username_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/register_username_iv"
                android:layout_marginLeft="10dp"
                android:hint="请输入用户名/手机/邮箱"
                android:background="@null"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/register_username_et"
                android:layout_toRightOf="@id/register_username_iv"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/register_pwd_iv"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/password"
                />

            <EditText
                android:id="@+id/register_pwd_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/register_pwd_iv"
                android:layout_marginLeft="10dp"
                android:hint="请输入密码"
                android:background="@null"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/register_pwd_et"
                android:layout_toRightOf="@id/register_pwd_iv"
                />

        </RelativeLayout>

        <Button
            android:id="@+id/register_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="注册"
            android:textSize="20sp"
            android:textColor="@android:color/holo_blue_dark"
            />

    </LinearLayout>

</LinearLayout>